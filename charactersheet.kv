<MyGrid>
    id:sheet
    display: entry
    rows:3
    padding:10
    spacing:10
    namedisplay: name
    xpdisplay: xp
    hpdisplay: hp


    slidersp: slidersp
    sliderab: sliderab
    canvas.before:
        Color:
            rgba: 0.5, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        GridLayout:
            cols:3
            rows_minimum: {0: 100, 1: 100, 2: 100}
            size_hint: 0.5, 0.5
            Label:
                id: xp
                text:"Xp"
            Label:
                id: hp
                text:"HP"
            Label:
                id: name
                text:"Name"
        BoxLayout:
            Label:
                size: self.texture_size
                id: entry
                text_size:self.size
                font_size: 14
                valign: "top"
                haligh: "middle"

        GridLayout:
            cols: 3
            cols_minimum: {0: 100, 1: 100, 2: 100, 3: 30, 4:30, 5:30}
            size_hint: 0.5, 0.5
            Button:
                spacing:10
                text:"âœ¨"
                on_press: root.showAbilities()
                font_size: 32
            Button:
                spacing:10
                id: spells
                on_press: root.showSpells()
                text:"ðŸ§™"
                font_size: 32
            Button:
                spacing:10
                id: equipment
                text:"âš”"
                font_size: 32
            GridLayout:
                rows: 2
                Label:
                    text: "Level: " + str(sliderab.value - 3) + " - " + str(sliderab.value)
                Slider:
                    id: sliderab
                    min: 0
                    max: 20
                    step: 4
                    orientation: 'horizontal'
            GridLayout:
                rows: 2
                Label:
                    text: "Level: " + str(slidersp.value)
                Slider:
                    id: slidersp
                    min: 0
                    max: 9
                    step: 1
                    orientation: 'horizontal'
            Button:
                id:exit
                spacing:10
                text: "exit"
                on_press: root.manager.current = 'menu'

<MenuScreen>
    id: menu
    display: chardisplay

    GridLayout:
        rows: 3
        rows_minimum: {0:300,1:30,2:30}
        cols_minimum: {0:300,1:30,2:30}
        size_hint: 1, 1
        BoxLayout:
            Label:
                text:"Press Load"
                id: chardisplay
            Button:
                text: "+"
                font_size:32
                on_press: root.manager.current = 'create'
        TextInput:
            multiline: False
            id: input
        Button:
            text: "Load Characters"
            on_press: root.showCharacters()

<CreationScreen>
    GridLayout:
