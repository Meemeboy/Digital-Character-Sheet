<MyGrid>
    id:sheet
    display: entry
    rows:3
    padding:10
    spacing:10
    namedisplay: name
    xpdisplay: xp
    hpdisplay: hp


    slidersp: slidersp
    sliderab: sliderab
    sliderle: sliderle
    canvas.before:
        Color:
            rgba: 0.5, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        GridLayout:
            cols:3
            rows_minimum: {0: 100, 1: 100, 2: 100}
            size_hint: 0.5, 0.5
            Label:
                id: xp
                text:"Xp"
            Label:
                id: hp
                text:"HP"
            Label:
                id: name
                text:"Name"
        BoxLayout:
            Label:
                size: self.texture_size
                id: entry
                text_size:self.size
                font_size: 14
                valign: "top"
                haligh: "middle"

        GridLayout:
            cols: 3
            cols_minimum: {0: 100, 1: 100, 2: 100, 3: 30, 4:30, 5:30}
            size_hint: 0.5, 0.5
            Button:
                spacing:10
                text:"Abilities"
                on_press: root.showAbilities()
                font_size: 32
            Button:
                spacing:10
                id: spells
                on_press: root.showSpells()
                text:"Spells"
                font_size: 32
            GridLayout:
                cols:2
                Button:
                    spacing:10
                    id: levelup
                    text:"Level Up"
                    font_size: 32
                    on_press: root.levelUp()
                Slider:
                    min:0
                    max:20
                    step:1
                    id: sliderle
            GridLayout:
                rows: 2
                Label:
                    text: "Level: " + str(sliderab.value - 3) + " - " + str(sliderab.value)
                Slider:
                    id: sliderab
                    min: 0
                    max: 20
                    step: 4
                    orientation: 'horizontal'
            GridLayout:
                rows: 2
                Label:
                    text: "Level: " + str(slidersp.value)
                Slider:
                    id: slidersp
                    min: 0
                    max: 9
                    step: 1
                    orientation: 'horizontal'
            Button:
                id:exit
                spacing:10
                text: "exit"
                on_press: root.manager.current = 'menu'

<MenuScreen>
    id: menu
    display: chardisplay

    GridLayout:
        rows: 3
        rows_minimum: {0:300,1:30,2:30}
        cols_minimum: {0:300,1:30,2:30}
        size_hint: 1, 1
        BoxLayout:
            Label:
                text:"Press Load"
                id: chardisplay
            Button:
                text: "+"
                font_size:32
                on_press: root.manager.current = 'create'
        TextInput:
            multiline: False
            id: input
        Button:
            text: "Load Characters"
            on_press: root.showCharacters()

<CreationScreen>
    GridLayout:
        rows: 7
        cols: 2
        Label:
            text:"Strength"
        GridLayout:
            rows:2
            Label:
                text: str(8 + strengthin.value)
            Slider:
                min:0
                max:7
                step: 1
                id: strengthin
        Label:
            text:"Dexterity"
        GridLayout:
            rows:2
            Label:
                text: str(8 + dexterityin.value)
            Slider:
                min:0
                max:7
                step: 1
                id: dexterityin
        Label:
            text:"Constitution"
        GridLayout:
            rows:2
            Label:
                text: str(8 + constitutionin.value)
            Slider:
                min:0
                max:7
                step: 1
                id: constitutionin
        Label:
            text:"Wisdom"
        GridLayout:
            rows:2
            Label:
                text: str(8 + wisdomin.value)
            Slider:
                min:0
                max:7
                step: 1
                id: wisdomin
        Label:
            text:"Intelligence"
        GridLayout:
            rows:2
            Label:
                text: str(8 + intelligencein.value)
            Slider:
                min:0
                max:7
                step: 1
                id: intelligencein
        Label:
            text:"Charisma"
        GridLayout:
            rows:2
            Label:
                text: str(8 + charismain.value)
            Slider:
                min:0
                max:7
                step: 1
                id: charismain
        Button:
            text:"Confirm"
            on_press:stats = root.assignStats()
        Label:
            text: str(strengthin.value + dexterityin.value + constitutionin.value + wisdomin.value + intelligencein.value + charismain.value) + "/27"

<PersonalScreen>
    entry: entry
    GridLayout:
        cols:2
        rows:4
        Label:
            text:"Select Class"
            id: entry
        TextInput:
            id: classin
            multiline: False
        Label:
            text:"Name:"
        TextInput:
            multiline: False
            id: namein
        Label:
            text:""
        Button:
            text:"Hello"
            on_press: root.selectClass()