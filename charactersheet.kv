        Label:
            text:"Constitution"
        TextInput:
            multiline: False
            id: constitutionin
        Label:
            text:"Wisdom"
        TextInput:
            multiline: False
            id: wisdomin
        Label:
            text:"Intelligence"
        TextInput:
            multiline: False
            id: intelligencein
        Label:
            text:"Charisma"
        TextInput:
            multiline: False
